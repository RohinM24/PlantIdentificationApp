<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ðŸŒ¿ Base app theme using Material3 -->
    <style name="Theme.Roleaf" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/dark_green</item>
    </style>

    <!-- ðŸŒ™ Optional Dark Theme -->
    <style name="Theme.Roleaf.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/dark_green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_roleaf_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Roleaf</item>
    </style>

    <style name="Theme.SplashScreen.IconBackground" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/dark_green</item>
    </style>


</resources>
